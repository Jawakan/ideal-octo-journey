<h1 class="title">ACNH Villagers</h1>

<% myType = nil %>

<% myType = request.GET %>
<% myType["gender"] ||= '' %>
<% myType["personality"] ||= '' %>
<% myType["animal"] ||= '' %>
<% !myType["gender"].empty? ? genderType = myType["gender"] : genderType = [
        'Male',
        'Female'
        ] %>
<% !myType["personality"].empty? ? personType = myType["personality"] : personType = [
        'Sisterly',
        'Normal',
        'Peppy',
        'Snooty',
        'Smug',
        'Cranky',
        'Lazy',
        'Jock',
        'Uchi'
        ] %>
<% !myType["animal"].empty? ? animalType = myType["animal"] : animalType = [
        'Alligator',
        'Anteater',
        'Bear',
        'Bird',
        'Bull',
        'Cat',
        'Chicken',
        'Cow',
        'Cub',
        'Deer',
        'Dog',
        'Duck',
        'Eagle',
        'Elephant',
        'Frog',
        'Goat',
        'Gorilla',
        'Hamster',
        'Hippo',
        'Horse',
        'Kangaroo',
        'Koala',
        'Lion',
        'Monkey',
        'Mouse',
        'Octopus',
        'Ostrich',
        'Penguin',
        'Pig',
        'Rabbit',
        'Rhino',
        'Sheep',
        'Squirrel',
        'Tiger`',
        'Wolf'
    ] %>

<div class="section is-small my-selects">
<%= form_with url: "/search", method: :get do |form| %>

    <div class="my-form-item">
    <%= form.label :query, "Gender:", class: "label is-size-4" %>
    <div class="select">
    <%= form.select :gender, ['' ,'Female', 'Male'] %>
    </div>
    </div>

    <div class="my-form-item">
    <%= form.label :query, "Personality:", class: "label is-size-4" %>
    <div class="select">
    <%= form.select :personality, [
        '',
        'Cranky',
        'Jock',
        'Lazy',
        'Normal',
        'Peppy',
        'Sisterly',
        'Snooty',
        'Smug',
        'Uchi'
        ] %>
    </div>
    </div>

    <div class="my-form-item">
    <%= form.label :query, "Species:", class: "label is-size-4" %>
    <div class="select">
    <%= form.select :animal, [
        '',
        'Alligator',
        'Anteater',
        'Bear',
        'Bird',
        'Bull',
        'Cat',
        'Chicken',
        'Cow',
        'Cub',
        'Deer',
        'Dog',
        'Duck',
        'Eagle',
        'Elephant',
        'Frog',
        'Goat',
        'Gorilla',
        'Hamster',
        'Hippo',
        'Horse',
        'Kangaroo',
        'Koala',
        'Lion',
        'Monkey',
        'Mouse',
        'Octopus',
        'Ostrich',
        'Penguin',
        'Pig',
        'Rabbit',
        'Rhino',
        'Sheep',
        'Squirrel',
        'Tiger`',
        'Wolf'
    ] %>
    </div>
    </div>
    
    <%= form.submit "Search", class: "button is-primary" %>
<% end %>
</div>

<% response = HTTParty.get("https://acnhapi.com/v1/villagers") %>
<div class="columns is-multiline is-centered">

<% response.each do |r| %>
    <% if personType.include?(r[1]["personality"]) && animalType.include?(r[1]["species"]) && genderType.include?(r[1]["gender"]) %>
        <div class="column is-one-third">
            <div class="box">
                <figure class="image is-256x256 m-2"><%= image_tag "villagers/#{r[0]}.png" %></figure>
                <div class="tile is-vertical m-3">
                <p class="subtitle is-size-3"><%= r[1]["name"]["name-USen"] %></p>
                <p><%= r[1]["gender"] %></p>
                <p><%= r[1]["species"] %></p>
                <p><%= r[1]["personality"] %></p>
                <p><%= r[1]["birthday-string"] %></p>
                </div>
            </div>
        </div>
    <% end %>
<% end %>
</div>